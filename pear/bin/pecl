#!/bin/sh

# first find which PHP binary to use
if test "x$PHP_PEAR_PHP_BIN" != "x"; then
  PHP="$PHP_PEAR_PHP_BIN"
else
  if test "/opt/homebrew/Cellar/php/8.3.11/bin/php" = '@'php_bin'@'; then
    PHP=php
  else
    PHP="/opt/homebrew/Cellar/php/8.3.11/bin/php"
  fi
fi

# then look for the right pear include dir
if test "x$PHP_PEAR_INSTALL_DIR" != "x"; then
  INCDIR=$PHP_PEAR_INSTALL_DIR
  INCARG="-d include_path=$PHP_PEAR_INSTALL_DIR"
else
  if test "/Users/swinney/Projects/swinney99/Swinneys-Topkill-Procedure/pear/share/pear" = '@'php_dir'@'; then
    INCDIR=`dirname $0`
    INCARG=""
  else
    INCDIR="/Users/swinney/Projects/swinney99/Swinneys-Topkill-Procedure/pear/share/pear"
    INCARG="-d include_path=/Users/swinney/Projects/swinney99/Swinneys-Topkill-Procedure/pear/share/pear"
  fi
fi

exec $PHP -C -q $INCARG -d date.timezone=UTC -d output_buffering=1 -d variables_order=EGPCS -d safe_mode=0 -d register_argc_argv="On" $INCDIR/peclcmd.php "$@"
